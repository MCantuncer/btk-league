  "scripts": {
    "dev": "nodemon",
    "start": "cd src && ts-node index.ts -e ts,graphql",
    "build:schema": "cd src && ts-node build.ts -e ts,graphql",
    "lint": "eslint ./src/**/*.ts --fix",
